@model bloggie.web.Models.ViewModels.AddBlogPostRequest

@{
    ViewData["Title"] = "Add a Blog Post";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add" asp-controller="AdminBlogPosts" method="post">
    <div class="form-group mb-3">
        <label asp-for="Heading"></label>
        <input asp-for="Heading" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PageTitle"></label>
        <input asp-for="PageTitle" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="FeaturedImageUrl"></label>
        <input asp-for="FeaturedImageUrl" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="UrlHandle"></label>
        <input asp-for="UrlHandle" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="PublishedDate"></label>
        <input asp-for="PublishedDate" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control"/>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="visible" asp-for="Visible">
        <label class="form-check-label">
            Visible
        </label>
    </div>
    <div class="mb-3">
        <label class="form-label">Tags</label>
        <select class="form-select" asp-items="Model.Tags" asp-for="SelectedTag">
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
    
</form>