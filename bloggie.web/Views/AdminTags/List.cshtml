@model List<bloggie.web.Models.Domain.Tag>

@{
    ViewBag.Title = "List of Tags";
    Layout = "_Layout";
}

<h1>List of Tags</h1>

@if (Model.Count > 0)
{
    <p>There are @Model.Count tags in the database.</p>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Display Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td>@tag.Name</td>
                <td>@tag.DisplayName</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>There are no tags in the database.</p>
}